{
    "rules": {
        "preset-jtf-style": {
            "4.2.7.コロン(：)": false,
            "4.3.1.丸かっこ（）": false,
        },
        "preset-ja-technical-writing": {
            "max-comma": false,
            "max-kanji-continuous-len": false,
            "no-doubled-joshi": {
                "allow": ["も", "たり", "か", "と"],
            },
            "no-exclamation-question-mark": false,
            "no-start-duplicated-conjunction": false,
        },
    },
}
